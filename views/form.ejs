  <h1>Funding Access for Education</h1>
  <!-- Form for student submitting background info -->
  <form action="/student" method="get" id="form">
    <!-- GPA Input -->
    <div class="my-2">
      <label for="GPA" class="form-label">Enter your GPA: </label>
      <input type="text" name="gpa" id="GPA" class="form-control">
    </div>


    <!-- MAJOR Input -->
    <div class="my-2">
      <label for="major" class="form-label">Major</label>
      <select id="major" name="major" class="form-select" aria-label="Default select example">
        <option value="computerScience">Computer Science</option>
        <option value="engineering">Engineering</option>
        <option value="business">Business</option>
        <option value="veterinary">Computer Science</option>
        <option value="health">Engineering</option>
        <option value="HVAC">Business</option>
        <option value="construction">Business</option>
        <option value="accounting">Computer Science</option>
        <option value="dance">Engineering</option>
        <option value="drama">Business</option>
        <option value="education">Business</option>
        <option value="design">Computer Science</option>
        <option value="manufacturing">Engineering</option>
        <option value="science" selected>Science</option>
      </select>

    </div>

    <!-- NeedBased -->
    <div class="my-2">
      <label for="needBased">Are you in need of financial assistance? </label>
      <input type="checkbox" name="needBased" id="needBased" value="true" class="form-check-input">
    </div>

    <!-- Student Type -->
    <div class="student-type my-2">
      <p>Check all that apply to you.</p>
      <div class="form-check">
        <label for="studentType0" class="form-check-label mx-1">Are you a transferring to a University?</label>
        <input type="checkbox" class="form-control form-check-input" name="studentType" id="studentType0"
          value="university">
      </div>
      <div class="form-check">
        <label for="studentType1" class="form-check-label  mx-1">Are you a recent Highschool Graduate?</label>
        <input type="checkbox" class="form-control form-check-input" name="studentType" id="studentType1" value="HS">
      </div>

      <div class="form-check">
        <label for="studentType3" class="form-check-label mx-1">Are you a recent GED recepient?</label>
        <input type="checkbox" class="form-control form-check-input" name="studentType" id="studentType2" value="GED">
      </div>
      <div class="form-check">
        <label for="studentType3" class="form-check-label mx-1">Are you a veteran?</label>
        <input type="checkbox" class="form-control form-check-input" name="studentType" id="studentType3" value="vet">
      </div>

      <div class="form-check">
        <label for="studentType4" class="form-check-label mx-1">Are you a purusing an Associates?</label>
        <input type="checkbox" class="form-control form-check-input" name="studentType" id="studentType4" value="AS">
      </div>

    </div>

    <!-- Submit button -->
    <button type="submit">Submit</button>
  </form>



  <%- include('partials/footer.ejs') %>